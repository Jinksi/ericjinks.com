---
import SketchWrap from '../../layouts/SketchWrap.astro'
---

<SketchWrap title="Half moon grid">
  <script>
    import canvasSketch from 'canvas-sketch'
    import sketch from '../../sketches/half-moon-grid'
    import defaultSettings from '../../sketches/lib/defaultSettings.js'

    canvasSketch(sketch.render, {
      ...defaultSettings,
      ...(sketch.settings || {}),
      canvas: document.querySelector('.sketch-canvas') as HTMLCanvasElement,
    })
  </script>
</SketchWrap>
