---
import BaseHead from '../components/BaseHead.astro'
import Header from '../components/Nav.astro'
import Footer from '../components/Footer.astro'

export interface Props {
  content: {
    title: string
    description: string
    author?: string
    pubDate?: string
    tags?: string
    updatedDate?: string
    heroImage?: string
    cardImage?: string
  }
}

const {
  content: { title, description, author, pubDate, updatedDate, heroImage },
} = Astro.props
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <style>
      .title {
        font-size: 2em;
        margin: 0.25em 0 0;
      }
      hr {
        border-top: 1px solid #ddd;
        margin: 1rem 0;
      }
    </style>
  </head>

  <body>
    <Header />

    <main>
      <section>
        <div class="container">
          <slot />
        </div>
      </section>
    </main>

    <Footer />
  </body>
</html>
