---
import BaseHead from '../components/BaseHead.astro'
import Header from '../components/Nav.astro'
import Footer from '../components/Footer.astro'
import { SITE_TITLE } from '../config'
import type { CollectionEntry } from 'astro:content'

export interface Props {
  sketch: CollectionEntry<'sketch'>
}

const {
  sketch: {
    data: { title, description },
  },
} = Astro.props
---

<html lang="en">
  <head>
    <BaseHead title={`${title} â€“ ${SITE_TITLE}`} description={description} />
    <style>
      .title {
        font-size: 2em;
        margin: 0.25em 0 0;
      }
      hr {
        border-top: 1px solid #ddd;
        margin: 1rem 0;
      }
    </style>
  </head>

  <body>
    <Header />

    <main>
      <section>
        <div class="container">
          <h1>{title}</h1>
          <slot />
        </div>
      </section>
    </main>

    <Footer />
  </body>
</html>
